# -------------------------------------------------------------------
# HUNTRESS API KEYS
# -------------------------------------------------------------------
# Huntress requires HTTP Basic Authentication:
# Authorization: Basic base64("PUBLIC_KEY:PRIVATE_KEY")

HUNTRESS_PUBLIC_KEY  = "<your_huntress_public_key>"
HUNTRESS_PRIVATE_KEY = "<your_huntress_private_key>"


# -------------------------------------------------------------------
# NINJAONE API — OAUTH CLIENT CREDENTIALS
# -------------------------------------------------------------------
# These must match your App inside NinjaOne developer settings.

NINJA_CLIENT_ID     = "<your_ninja_client_id>"
NINJA_CLIENT_SECRET = "<your_ninja_client_secret>"


# -------------------------------------------------------------------
# AXCIENT API KEY
# -------------------------------------------------------------------
# Axcient authentication: X-Api-Key: <your key>

AXCIENT_API_KEY = "<your_axcient_api_key>"
